<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scope - Inscription</title>
  <link rel="icon" href="/img/items/favicon.png" />

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/javascript/script.js"></script>


</head>

<body>
  <%- include('../includes/navbar', {session : session}); %>
  <div class="container mt-3">
    <div class="row">
      <div class="col-lg-6">
        <form action="/api/users/inscription/" method="post">
          <div class="formSize">
            <div class="row tab">
              <div class="col-md-12 form-group">
                <label>Vous êtes un :</label>
                <select class="form-control" name="isEtudiant">
                  <option value="etudiant">Etudiant</option>
                  <option value="professionnel">Professionnel</option>
                </select>
              </div>
            </div>

            <div class="row tab">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Votre e-mail :</label>
                  <input type="text" name="email" class="form-control" placeholder="Ex : example.name@gmail.com">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Votre âge :</label>
                  <input type="number" name="age" class="form-control" placeholder="Ex : 18">
                </div>
              </div>

              <div class="col-md-12 form-group">
                <label>Votre mot de passe :</label>
                <input type="password" name="password" class="form-control">
              </div>
              <div class="col-md-12 form-group">
                <label>Confirmez votre mot de passe :</label>
                <input type="password" name="confirmPassword" class="form-control">
              </div>
            </div>

            <div class="row tab">
              <div class="col-md-6">
                <div class="form-group">
                  <label>Votre nom :</label>
                  <input type="text" name="lastName" class="form-control" placeholder="Ex : Dupont">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label>Votre prénom :</label>
                  <input type="text" name="firstName" class="form-control" placeholder="Ex : Jean">
                </div>
              </div>
              <div class="col-md-12 form-group">
                <label>Votre pseudo :</label>
                <input type="text" name="username" class="form-control" placeholder="Ex : Lock">
              </div>
              <div class="col-md-6 form-group">
                <label>Votre code Postal :</label>
                <input type="text" name="codePostal" class="form-control" placeholder="Ex : 92380">
              </div>
              <div class="col-md-6 form-group">
                <label>Votre Ville :</label>
                <input type="text" name="city" class="form-control" placeholder="Ex : Garches">
              </div>
            </div>

            <div class="row tab">
              <div class="col-md-12 form-group">
                <label>Votre profession / Vos Etudes :</label>
                <input type="text" name="job" class="form-control" placeholder="Ex : Artisanat">
              </div>
              <div class="col-md-12 form-group">
                <label>Votre biographie :</label>
                <textarea type="text" name="biography" class="form-control" rows="3"></textarea>
              </div>
            </div>
          </div>
          <div class="allSteps">
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
            <span class="step"></span>
          </div>
          <div class="float-left">
            <button type="button" class="btn btn-primary mb-3" id="boutonPrecedent"
              onclick="nextStep(-1)">Précédent</button>
          </div>
          <div class="float-right">
            <button type="button" class="btn btn-primary mb-3" id="boutonSuivant" onclick="nextStep(1)">Suivant</button>
            <button type="submit" class="btn btn-primary mb-3" value="Upload" id="boutonInscription">Je m'inscris
              !</button>
          </div>


        </form>
      </div>
    </div>

  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>

  <script>
    let currentTab = 0;
    displayCurrentTab(currentTab);

    function displayCurrentTab(currentTab) {

      let allTabs = document.getElementsByClassName("tab");
      allTabs[currentTab].style.display = "flex";

      if (currentTab == 0) {
        document.getElementById("boutonPrecedent").style.display = "none";
        document.getElementById("boutonSuivant").style.display = "inline-block";
        document.getElementById("boutonInscription").style.display = "none";
      }
      else if (currentTab == 1 || currentTab == 2) {
        document.getElementById("boutonPrecedent").style.display = "inline-block";
        document.getElementById("boutonSuivant").style.display = "inline-block";
        document.getElementById("boutonInscription").style.display = "none";
      }
      else {
        document.getElementById("boutonPrecedent").style.display = "inline-block";
        document.getElementById("boutonSuivant").style.display = "none";
        document.getElementById("boutonInscription").style.display = "inline-block";
      }


      currentStep(currentTab);
    }

    function currentStep(currentTab) {
      let allSteps = document.getElementsByClassName("step");
      let i;
      for (i = 0; i < allSteps.length; i++) {
        allSteps[i].className = allSteps[i].className.replace(" currentStep", "");
      }
      for (i = 0; i <= currentTab; i++) {
        allSteps[i].className += " currentStep";
      }
    }

    function nextStep(n) {
      let allTabs = document.getElementsByClassName("tab");
      allTabs[currentTab].style.display = "none";
      currentTab = currentTab + n;

      displayCurrentTab(currentTab);

    }
  </script>
</body>

</html>